<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="calendar.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/png" href="imgs/favicon.png" />
    <script
      src="https://kit.fontawesome.com/d7d4cb6163.js"
      crossorigin="anonymous"
    ></script>
    <title>PeachCalendar</title>
  </head>
  <body>
    <header class="header">
      <div class="header__logo">
        <img src="peach.png" />
        <i class="fa-regular fa-calendar-check"></i>
      </div>
      <div class="header__name">PeachCalendar</div>
      <div class="header__clock"></div>
    </header>

    <section class="calendar">
      <div class="calendar__head">
        <div class="calendar__head__date"></div>
        <div class="calendar__head__move">
          <button class="calendar__head__move__prev">
            <i class="fa-solid fa-chevron-left"></i>
          </button>
          <button id="today" class="calendar__head__move__today">TODAY</button>
          <button class="calendar__head__move__next">
            <i class="fa-solid fa-chevron-right"></i>
          </button>
        </div>
      </div>
      <div class="calendar__body">
        <form id="update" action="/" method="get">
          <table id="calendar" border="1" align="center">
            <thead>
              <tr>
                <td class="sun" align="center">Sun</td>
                <td align="center">Mon</td>
                <td align="center">Tue</td>
                <td align="center">Wed</td>
                <td align="center">Thu</td>
                <td align="center">Fri</td>
                <td class="sat" align="center">Sat</td>
              </tr>
            </thead>
            <tbody class="calendar__body__display"></tbody>
          </table>
        </form>
      </div>
    </section>

    <aside class="schedule">
      <div class="schedule__apply__container">
        <button class="schedule__apply__btn">Add schedule</button>
      </div>
      <div class="schedule__content">
        <div class="schedule__date"></div>
        <!--일정 추가 시작
        <form class="todo__wrap" action="/todo" method="post">
          <div class="input__wrap">
            <input
              type="hidden"
              id="schedule__date"
              class="schedule__date"
              name="date"
              value="일정 날짜"
            />
            <input
              type="text"
              placeholder="please write here!!"
              id="todo__input__box"
              class="todo__input__box"
              name="content"
              required
            />
            <button id="input__data" class="input__data">INPUT</button>
          </div>
        </form>
        일정 추가 끝-->
        <div class="schedule__list">
          <form action="/delete" method="post">
            <table class="schedule__list__table">
              <!-- 아래 문장을 주석처리해서 적어놔도 오류 나옴 -->
              <% lists.forEach(function (item) { %>
              <input
                type="hidden"
                id="schedule__delete__date"
                class="schedule__delete__date"
                name="date"
                value="<%=item.date%>"
              />
              <tr class="schedule__underline">
                <td class="schedule__label__container">
                  <div class="schedule__label"></div>
                </td>
                <td class="schedule__content"><%=item.content%></td>
                <td>
                  <button
                    name="idx"
                    value="<%=item.idx%>"
                    class="schedule__bin__btn"
                    onchange="this.form.submit()"
                  >
                    <i class="fa-solid fa-trash"></i>
                  </button>
                </td>
              </tr>
              <% }) %>
            </table>
          </form>
        </div>
      </div>
    </aside>

    <footer></footer>
  </body>
  <script src="calendar.js"></script>
</html>
